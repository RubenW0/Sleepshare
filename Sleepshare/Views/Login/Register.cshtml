@model PresentationLayer.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/Login/Register.css" asp-append-version="true" />

<div class="form-container">

    @if (TempData["SuccessMessage"] != null)
    {
        <p class="success-message">@TempData["SuccessMessage"]</p>
    }

    <form asp-action="Register" method="post" class="register-form">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="error-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="error-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="error-message"></span>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
