@model PresentationLayer.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="~/css/Home/Profile.css" asp-append-version="true" />

<div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-picture">
            <!-- Profile Picture Placeholder -->
            <div class="profile-pic-placeholder"></div>
        </div>
        <div class="profile-info">
            <h1>@Model.Username</h1>
            <a asp-controller="Follower" asp-action="SearchUsers" class="btn btn-primary follow-button">Follow Users</a>
        </div>
    </div>

    <!-- Timeline Section -->
    <h2 class="section-title"><strong>Sleep Timeline</strong></h2>
    <div class="timeline">
        @if (Model.SleepReviews.Any())
        {
            @foreach (var review in Model.SleepReviews)
            {
                <div class="review-box">
                    <div class="review-header">
                        <div class="review-username">
                            <p><strong>@review.Reviewer</strong></p>
                        </div>
                        <div class="sleep-rating">
                            <p>@review.SleepRating / 10</p>
                            <p class="rating-text">Rating</p>
                        </div>
                    </div>

                    <div class="review-details">
                        <p>@review.Description</p>
                        <p>&nbsp;</p>
                        <p><strong>Sleep Goal:</strong> @review.SleepGoal hours</p>
                        <p><strong>Sleep Duration:</strong> @review.SleepDuration minutes</p>
                        <p><strong>Date:</strong> @review.Date.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>You have no sleep reviews yet.</p>
        }
    </div>
</div>

<style>
    /* General Page Styling */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Profile Header */
    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
        padding: 10px 20px;
        border-bottom: 1px solid #ccc;
    }

    .profile-picture {
        margin-right: 20px;
    }

    .profile-pic-placeholder {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #ddd;
        display: inline-block;
    }

    .profile-info h1 {
        font-size: 32px;
        margin: 0;
    }

    .profile-info p {
        color: #666;
        margin: 5px 0 0;
        font-size: 16px;
    }

    /* Section Title */
    .section-title {
        font-size: 22px;
        margin-bottom: 20px;
        display: inline-block;
        padding-bottom: 5px;
    }

    /* Timeline Styling */
    .timeline {
        margin-top: 20px;
    }

    .review-box {
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .review-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .review-username {
        font-size: 24px;
        font-weight: bold;
        margin-right: 20px;
    }

    .sleep-rating {
        display: inline-block;
        background-color: #f0f0f0;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
        width: 80px;
    }

        .sleep-rating p {
            margin: 0;
        }

    .rating-text {
        font-size: 12px;
        color: #777;
    }

    .review-details p {
        margin: 5px 0;
    }

    .review-details strong {
        font-weight: bold;
    }

    .follow-button {
        margin-top: 10px;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        background-color: #f9f9f9; /* Match the sleep review background */
        color: #333; /* Text color */
        text-decoration: none; /* Remove the underline */
        display: inline-block;
        border: 1px solid #ccc; /* Optional border for definition */
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .follow-button:hover {
            background-color: #e6e6e6; /* Slightly darker background on hover */
            color: #000; /* Slightly darker text on hover */
        }




</style>


